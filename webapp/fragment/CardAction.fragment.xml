<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.layout="sap.ui.layout"
	xmlns="sap.m">
	<sap.ui.layout.form:Form id="formCardAction" class="sapUiMediumMarginBottom" editable="true">
		<sap.ui.layout.form:layout>
			<sap.ui.layout.form:ResponsiveGridLayout/>
		</sap.ui.layout.form:layout>
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer>
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement>
						<sap.ui.layout.form:fields>
							<GenericTile backgroundImage="/sap/bc/ui5_ui5/pnp/blockreplace/images/smartshoppercard.jpg" frameType="TwoByOne" class="sapUiSmallMarginTop sapUiLargeMarginBegin"
								headerImage="{= ${LoyaltyModel>CardStatus} === 'Active'? 'sap-icon://status-positive' : 'sap-icon://status-negative' }">
								<tileContent>
									<TileContent footer="{= 'Card number: ' + ${LoyaltyModel>LoyaltyCardID} }">
										<content>
											<NewsContent contentText="{= ${LoyaltyModel>MemberName} + ' ' + ${LoyaltyModel>MemberSurname} }" subheader="{LoyaltyModel>CardStatus}"/>
										</content>
									</TileContent>
								</tileContent>
							</GenericTile>
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
					<sap.ui.layout.form:FormElement visible="{= ${ViewModel>/cboxNextActionVisible} === true? false : true }">
						<HBox>
							<Button text="{ViewModel>/toggleCardStatusButtonText}" press="toggleCardStatus" width="140px" type="Emphasized"
								class="sapUiMediumMarginTop sapUiLargeMarginBegin"/>
							<Button text="{i18n>textButtonContinueWithoutStatusChange}" press="continueWithoutCardStatusChange" width="140px" type="Transparent"
								class="sapUiMediumMarginTop sapUiLargeMarginBegin" visible="{= ${LoyaltyModel>CardStatus} === 'Blocked'? true : false }"/>
						</HBox>
					</sap.ui.layout.form:FormElement>
					<sap.ui.layout.form:FormElement visible="{ViewModel>/cboxNextActionVisible}">
						<ActionSelect id="cboxNextAction" items="{OptionsModel>/NextActions}" width="200px" change="onNextActionChange"
							visible="{ViewModel>/cboxNextActionEnabled}" class="sapUiMediumMarginTop sapUiLargeMarginBegin">
							<items>
								<core:ListItem key="{OptionsModel>NextActionID}" text="{OptionsModel>NextActionText}"/>
							</items>
						</ActionSelect>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</core:FragmentDefinition>