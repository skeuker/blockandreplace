<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.layout="sap.ui.layout"
	xmlns="sap.m">
	<sap.ui.layout.form:Form id="formFinishUp" class="sapUiMediumMarginBottom" editable="true"
		formContainers="{LoyaltyCardTrackerModel>/LoyaltyCards}">
		<sap.ui.layout.form:layout>
			<sap.ui.layout.form:ResponsiveGridLayout adjustLabelSpan="true"/>
		</sap.ui.layout.form:layout>
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer>
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement>
						<sap.ui.layout.form:fields>
							<HBox>
								<GenericTile backgroundImage="images/smartshoppercard.jpg" frameType="TwoByOne" class="sapUiSmallMarginTop sapUiLargeMarginBegin"
									headerImage="{= ${LoyaltyCardTrackerModel>CardStatus} === 'Active'? 'sap-icon://status-positive' : 'sap-icon://status-negative' }">
									<tileContent>
										<TileContent footer="{= 'Card number: ' + ${LoyaltyCardTrackerModel>LoyaltyCardID} }">
											<content>
												<NewsContent contentText="{= ${LoyaltyCardTrackerModel>MemberName} + ' ' + ${LoyaltyCardTrackerModel>MemberSurname} }"
													subheader="{LoyaltyCardTrackerModel>CardStatus}"/>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
								<core:Icon src="sap-icon://process" size="60px" class="pnpCardBlockReplaceSummaryArrow" color="#93b7d6"
									visible="{= ${LoyaltyCardTrackerModel>isPredecessor}? true : false }"/>
							</HBox>
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</core:FragmentDefinition>